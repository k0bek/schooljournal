generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum MemberType {
  teacher
  student
}

model User {
  id String @id @default(uuid()) @map("_id")
  username String
  firstName String
  lastName String
  email String @unique
  password String
  imageUrl String?
  type MemberType

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tokens    Token[]
}

model Token {
  id String @id @default(uuid()) @map("_id")
  userId String
  refreshToken String
  isValid Boolean
  user          User      @relation(fields: [userId], references: [id])
}