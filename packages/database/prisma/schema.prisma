generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid()) @map("_id")
  firstName String
  lastName String
  email String @unique
  password String
  imageUrl String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Token {
  id String @id @default(uuid()) @map("_id")
  userId String
  refreshToken String
  isValid Boolean
}